//
// TTT.WeaponInfo
//
@BaseClass = weap : ""
[
	firesound(string) { group = "Sounds" } : "Fire Sound" : "" : ""
	dryfiresound(string) { group = "Sounds" } : "Dry Fire Sound" : "" : ""
	firemode(choices) { group = "Important" } : "Fire Mode" : 0 : "" =
	[
		0 : "Automatic"
		1 : "Semi"
		2 : "Burst"
	]
	bulletsperfire(integer) { group = "Stats" } : "Bullets Per Fire" : 1 : ""
	clipsize(integer) { group = "Stats" } : "Clip Size" : 30 : ""
	damage(float) { group = "Stats" } : "Damage" : 20 : ""
	damagefalloffstart(float) { group = "Stats" } : "Damage Fall Off Start" : "0" : ""
	damagefalloffend(float) { group = "Stats" } : "Damage Fall Off End" : "0" : ""
	headshotmultiplier(float) { group = "Stats" } : "Headshot Multiplier" : "1" : ""
	spread(float) { group = "Stats" } : "Spread" : "0" : ""
	primaryrate(float) { group = "Stats" } : "Primary Rate" : "0" : ""
	secondaryrate(float) { group = "Stats" } : "Secondary Rate" : "0" : ""
	reloadtime(float) { group = "Stats" } : "Reload Time" : "2" : ""
	verticalrecoil(float) { group = "Stats" } : "Vertical Recoil" : "0" : ""
	horizontalrecoilrange(float) { group = "Stats" } : "Horizontal Recoil Range" : "0" : ""
	recoilrecoveryscale(float) { group = "Stats" } : "Recoil Recovery Scale" : "0" : ""
	ammotype(choices) { group = "Stats" } : "Ammo Type" : 0 : "" =
	[
		0 : "None"
		1 : "Pistol SMG"
		2 : "Shotgun"
		3 : "Sniper"
		4 : "Magnum"
		5 : "Rifle"
	]
	ejectparticle(resource:vpcf) { group = "VFX" } : "Eject Particle" :  : ""
	muzzleflashparticle(resource:vpcf) { group = "VFX" } : "Muzzle Flash Particle" :  : ""
	slot(choices) { group = "Important" } : "Slot" : 0 : "" =
	[
		0 : "Primary"
		1 : "Secondary"
		2 : "Melee"
		3 : "Offensive Equipment"
		4 : "Utility Equipment"
		5 : "Grenade"
	]
	spawnable(boolean) { group = "Important" } : "Spawnable" : 0 : ""
	candrop(boolean) { group = "Important" } : "Can Drop" : 1 : ""
	viewmodel(resource:vmdl) { group = "ViewModels" } : "View Model" : "" : ""
	handsmodel(resource:vmdl) { group = "ViewModels" } : "Hands Model" : "" : ""
	holdtype(choices) { group = "WorldModels" } : "Hold Type" : 0 : "" =
	[
		0 : "None"
		1 : "Pistol"
		2 : "Rifle"
		3 : "Shotgun"
		4 : "Carry"
		5 : "Fists"
	]
	deploytime(float) { group = "Stats" } : "Deploy Time" : "0.6" : ""
	buyable(boolean) { group = "Important" } : "Buyable" : 0 : ""
	islimited(boolean) { group = "Important" } : "Is Limited" : 0 : ""
	price(integer) { group = "Stats" } : "Price" : 0 : ""
	icon(string) { group = "UI" editor = "AssetBrowse(png)" } : "Icon" : "" : ""
	description(string) { group = "UI" } : "Description" :  : ""
	worldmodel(resource:vmdl) { group = "WorldModels" } : "World Model" : "" : ""
	libraryname(string) : "Library Name" :  : ""
