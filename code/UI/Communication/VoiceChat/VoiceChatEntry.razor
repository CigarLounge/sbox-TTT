@namespace TTT.UI

<root class="rounded opacity-heavy text-shadow">
    <img src="avatar:@_client.SteamId" class="avatar" />
    <text class="name">@_client.Name</text>
</root>

@code {
    private string BackgroundColor()
    {
        if (_client.Pawn is not TTT.Player player || !player.IsAlive)
            return "#fcdb38";

        if (player.Role is Detective)
            return player.Role.Color.Hex;

        return "#303030";
    }
}

<style>
    VoiceChatEntry {
        flex-direction: row;
        padding: 8px 8px;
        margin-bottom: 5px;
        align-items: center;
        overflow: hidden;
        transition: all 0.05s ease-out;
        background-color: @BackgroundColor();

        &:intro {
            opacity: 0;
            left: 10px;
        }

        &:outro {
            opacity: 0;
            left: 10px;
        }

        .avatar {
            width: 25px;
            height: 25px;
            border-radius: 4px;
        }

        .name {
            font-size: 18px;
            margin-left: 5px;
        }
    }
</style>