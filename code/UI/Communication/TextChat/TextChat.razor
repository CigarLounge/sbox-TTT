@namespace TTT.UI

<root class="text-shadow">
	<div class="canvas" @ref=Canvas />
	<TextEntry class="background-color-primary" @ref=Input onsubmit=@Submit onblur=@Close />
</root>

<style>
	TextChat {
		position: absolute;
		bottom: 140px;
		left: 25px;
		z-index: 100;
		flex-direction: column;
		width: 505px;
		max-height: 350px;
		font-size: 16px;
		pointer-events: none;
		transition: all 0.1s ease, border 0s ease;

		textentry {
			transition: opacity 0.1s ease;
			flex-shrink: 0;
			opacity: 0;
			border-radius: 4px;
			border-bottom: 3px;
			padding: 0 10 10 0;
		}

		.placeholder {
			color: #c0cee7;
		}

		.content-label {
			margin-left: 16px;
		}

		.placeholder, .content-label {
			font-size: 14px;
			font-weight: 400;
			text-shadow: 2px 2px 1px rgba( black, 0.1 );
			margin-top: 11px;
		}

		.canvas {
			flex-direction: column;
			align-items: flex-start;
			overflow: scroll;
		}

		&.open {
			pointer-events: all;
			bottom: 130;
			border-radius: 4 4 0 0;

			textentry {
				opacity: 0.9;
				width: 100%;
				cursor: text;
			}

			.canvas {
				TextChatEntry {
					transition: opacity 0.1s ease;
