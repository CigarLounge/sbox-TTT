@namespace TTT.UI

<root class="background-color-gradient opacity-heavy rounded text-shadow">
    <div class="round-name">
        <text @ref=RoundName class="text-color-tertiary" />
    </div>
    <div class="timer">
        <text @ref=Timer />
        <text @ref=SubText class="sub-text text-color-tertiary" />
    </div>
</root>

<style>
    RoundTimer {
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
        justify-content: center;
        align-items: center;
        border-radius: 4px;

        .round-name {
            min-width: 175px;
            justify-content: center;
            border-radius: 4px;
            font-size: 24px;
            padding: 8px;
            text-transform: uppercase;
            font-size: 20px;
            font-weight: bold;
        }

        .timer {
            justify-content: center;
            min-width: 110px;
            border-radius: 0 4px 4px 0;
            padding: 8px;
            font-size: 24px;
            font-weight: bold;
            background-color: #1e1e1ea2;

            .sub-text {
                font-size: 16px;
                position: absolute;
                opacity: 0;
                transition: all 0.2s ease-in;

                &.show {
                    opacity: 1;
                    bottom: -12px;
                }
            }
        }
    }
</style>
