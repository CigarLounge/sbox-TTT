@using System;

@namespace TTT.UI

<root class="text-shadow">
    <text style="index">@Index.</text>
    <text>@Prefix</text>
    @if (Target is not null)
    {
        <text>
            <text style="color: @(Target.QuickChatColor.Hex)">@Target.QuickChatMessage</text>
        </text>
    }
    <text>@Suffix</text>
</root>

@code {
    public IQuickChatTarget Target { get; set; }
    public string Index { get; set; }
    public string Prefix { get; set; } = "";
    public string Suffix { get; set; } = "";
    protected override int BuildHash() => HashCode.Combine(Target, Target?.QuickChatMessage, Target?.QuickChatColor);
}

<style>
    QuickChatEntry {
        .index {
            font-weight: bold;
        }
    }
</style>
