@using System;

@namespace TTT.UI

<root class="text-shadow">
    <text style="index">@Index.</text>
    <text>@Prefix</text>
    @if (TargetInfo is not null)
    {
        <text>
            <text class="@(!TargetInfo.IsPlayerName ? " text-color-tertiary" : "" )">@TargetInfo.Name</text>
        </text>
    }
    <text>@Postfix</text>
</root>

@code {
    public QuickChat.TargetInfo TargetInfo { get; set; }
    public string Index { get; set; }
    public string Prefix { get; set; } = "";
    public string Postfix { get; set; } = "";
    protected override int BuildHash() => HashCode.Combine(TargetInfo?.Name, TargetInfo?.IsPlayerName);
}

<style>
    QuickChatEntry {
        .index {
            font-weight: bold;
        }
    }
</style>
