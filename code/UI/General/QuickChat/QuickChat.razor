@using Sandbox;
@using TTT;

@namespace TTT.UI

@if (!Game.LocalPawn.IsAlive() || !IsShowing)
{
    return;
}

<root>
    <QuickChatEntry Index=1 TargetInfo=@_target Prefix="I'm with" Postfix="." />
    <QuickChatEntry Index=2 TargetInfo=@_target Prefix="I see" Postfix="." />
    <QuickChatEntry Index=3 Prefix="Yes." />
    <QuickChatEntry Index=4 Prefix="No." />
    <QuickChatEntry Index=5 TargetInfo=@_target Postfix="is a Traitor!" />
    <QuickChatEntry Index=6 TargetInfo=@_target Postfix="acts suspicious." />
    <QuickChatEntry Index=7 TargetInfo=@_target Postfix="is Innocent." />
    <QuickChatEntry Index=8 Prefix="Help!" />
    <QuickChatEntry Index=9 Prefix="Anyone still alive?" />
</root>

<style>
    QuickChat {
        position: absolute;
        left: 25px;
        top: 50%;
        transform: translateY(-50%);
        flex-direction: column;
        z-index: 101;
        font-size: 18px;
        align-items: flex-start;

        .index {
            font-weight: bold;
        }
    }
</style>