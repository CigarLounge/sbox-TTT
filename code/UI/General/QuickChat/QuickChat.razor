@using Sandbox;
@using TTT;

@namespace TTT.UI

@if (!Game.LocalPawn.IsAlive() || !IsShowing)
{
    return;
}

<root class="text-shadow">
    <text><text class="index">1.</text>I'm with <text>@_target.Name</text></text>
</root>

<style>
    QuickChat {
        position: absolute;
        left: 25px;
        top: 50%;
        transform: translateY(-50%);
        flex-direction: column;
        z-index: 101;
        font-size: 17px;

        .message {
            margin-left: 10px;
            font-weight: normal;
        }

        .index {
            font-weight: bold;
        }
    }
</style>