@namespace TTT.UI

<root>
    <div class="container">
        <ScoreboardHeader />
        <div @ref=GroupPanel class="background-color-secondary rounded-bottom groups">
            <ScoreboardGroup @Status=@PlayerStatus.Alive />
            <ScoreboardGroup @Status=@PlayerStatus.Spectator />
        </div>
    </div>
</root>

<style>
    Scoreboard {
        height: 100%;
        position: absolute;
        display: flex;
        justify-content: center;
        align-self: center;
        width: 45%;
        flex-direction: column;
        transition: bottom 0.2s ease-out;

        .container {
            flex-direction: column;
            justify-content: center;

            .column-label-panel {
                flex-direction: row;
                justify-content: flex-end;
                padding: 4px;
            }

            .groups {
                flex-direction: column;
                padding: 8 8 12 8;
                max-height: 77%;
                overflow: scroll;
            }
        }
    }
</style>