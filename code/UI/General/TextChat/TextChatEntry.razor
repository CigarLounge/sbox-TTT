@namespace TTT.UI

<root>
    <text class="name" style="color: @(NameColor.GetValueOrDefault().Hex)">@Name</text>
    <text class="message">@Message</text>
</root>

<style>
    TextChatEntry {
        border-radius: 4px;
        flex-shrink: 0;
        flex-grow: 0;
        width: 100%;
        transition: opacity .15s linear;
        text-shadow: 1px 1px 1px black;

        &.faded {
            opacity: 0;
        }

        .name {
            font-weight: bold;
            margin-right: 10px;
            color: #17ad44;
            letter-spacing: 1px;
        }

        .message {
            align-items: center;
            flex-grow: 1;
            font-weight: 300;
        }

        &.info {
            .name {
                color: #fdc418;
            }
        }
    }
</style>