@using Sandbox;

@namespace TTT.UI

<root>
    <text class="name" style="color: @(NameColor.Hex)">@Name</text>
    <text>@Message</text>
</root>

@code {
    public string Name;
    public string Message;
    public Color NameColor;

    private RealTimeSince _timeSinceCreation = 0;

    public override void Tick()
    {
        if (_timeSinceCreation < 8)
            return;

        AddClass("faded");
    }
}

<style>
    TextChatEntry {
        border-radius: 4px;
        flex-shrink: 0;
        flex-grow: 0;
        width: 100%;
        transition: opacity .15s linear;
        text-shadow: 1px 1px 1px black;

        &.faded {
            opacity: 0;
        }

        .name {
            font-weight: bold;
            margin-right: 10px;
            letter-spacing: 1px;
        }
    }
</style>