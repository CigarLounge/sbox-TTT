@using TTT;

@namespace TTT.UI

<root>
    <div class="inner">
        <div class="header">
            <div class="left">
                <text class="title text-shadow">Map Vote</text>
                <text class="subtitle text-shadow">Choose your next map</text>
            </div>
            <div class="right">
                <text class="countdown text-shadow">@GameManager.Current.State.TimeLeftFormatted</text>
            </div>
        </div>
        <div @ref="Maps" class="body">
            @foreach (var map in GameManager.Current.MapVoteIdents)
            {
                <MapIcon @Ident=@map />
            }
        </div>
        <div class="footer">
        </div>
    </div>
</root>

<style>
    MapSelectionMenu {
        background-color: #111;
        position: absolute;
        left: -50px;
        right: -50px;
        top: -50px;
        bottom: -50px;
        pointer-events: all;

        .inner {
            margin: 150px 20%;
            flex-direction: column;
            flex-grow: 1;

            .header {
                flex-direction: row;

                .left {
                    flex-grow: 1;
                    flex-direction: column;

                    .title {
                        font-size: 50px;
                        font-weight: bold;
                    }

                    .subtitle {
                        font-size: 24px;
                        font-weight: bold;
                    }
                }

                .right {
                    .countdown {
                        font-size: 50px;
                        font-weight: bold;
                    }
                }
            }

            .body {
                margin: 50px;
                flex-wrap: wrap;
                overflow: scroll;
            }
        }
    }
</style>