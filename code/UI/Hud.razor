@using Sandbox;
@using Sandbox.UI;

@namespace TTT.UI
@inherits RootPanel
@attribute [StyleSheet("/ui/Hud.scss")]

<root class="panel fullscreen">
    <HintDisplay />
    <PlayerInfo />
    <InventoryWrapper />
    <TextChat />
    <QuickChat />
    <VoiceChatDisplay />
    <RoundTimer />
    <VoiceList />
    <InfoFeed />
    <FullScreenHintMenu />
    <TabMenu />
    <Crosshair />
    <CarriableHint />
    <RoleMenu />
    <DamageIndicator />
    <WorldPoints />
    <SpectatingHint />
</root>

@code

{
    /// <summary>
    /// The player that we're currently displaying info about through UI elements.
    /// </summary>
    public static TTT.Player DisplayedPlayer => Spectating.Player.IsValid() ? Spectating.Player :
    (TTT.Player)Game.LocalPawn;

    public Hud()
    {
        Game.RootPanel = this;
    }
}
