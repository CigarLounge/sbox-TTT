@using System;

@namespace TTT.UI

<root>
	@{
		var player = Spectating.Player ?? (Player)Sandbox.Game.LocalPawn;

		foreach (var perk in player.Perks)
		{
			if (player.IsRoleKnown)
			{
				<PerkSlot Perk=@perk />
			}
		}
	}
</root>

@code
{
	protected override int BuildHash()
	{
		var player = Spectating.Player ?? (Player)Sandbox.Game.LocalPawn;

		return HashCode.Combine(player.Perks.HashCombine(perk => perk.GetHashCode()));
	}
}

<style>
	PerkDisplay {
		display: flex;
		align-items: flex-end;
		flex-direction: column-reverse;
		margin-bottom: 15px;
	}
</style>