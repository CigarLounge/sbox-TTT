@using System;

@namespace TTT.UI

<root>
    @foreach (var perk in CameraMode.Target.Perks)
    {
        if (CameraMode.Target.IsRoleKnown)
        {
            <PerkSlot Perk=@perk />
        }
    }
</root>

@code {
    protected override int BuildHash()
    {
        return HashCode.Combine(CameraMode.Target.Perks.HashCombine(perk => perk.GetHashCode()));
    }
}

<style>
    PerkDisplay {
        display: flex;
        align-items: flex-end;
        flex-direction: column-reverse;
        margin-bottom: 15px;
    }
</style>