@using Sandbox.UI;

@namespace TTT.UI

@if (_screenPos.z <= 0f)
{
    return;
}

<root style="left: @Length.Fraction( _screenPos.x ); top: @Length.Fraction( _screenPos.y )">
    <img class="detective-image" />
    <text class="distance-label text-shadow">@_distance</text>
</root>

<style>
    DetectiveMarker {
        position: absolute;
        text-align: center;
        align-items: center;
        justify-content: center;
        transform: scale(0.75);
        transition: opacity 0.05s ease-in;

        .detective-image {
            position: absolute;
            background-image: url("/ui/d-call-icon.png");
            background-repeat: no-repeat;
            background-size: cover;
            width: 40px;
            height: 40px;
        }

        .distance-label {
            position: absolute;
            top: 15px;
            font-weight: bold;
            justify-content: center;
        }

        &:intro,
        &:outro {
            opacity: 0;
        }
    }
</style>