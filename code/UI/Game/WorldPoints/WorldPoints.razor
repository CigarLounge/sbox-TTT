@using System.Collections.Generic;

@namespace TTT.UI

<root class="fullscreen" />

@code {
	public static WorldPoints Instance { get; set; }

	public WorldPoints() => Instance = this;

	public void DeletePoints<T>()
	{
		foreach (var child in Children)
		{
			if (child is T)
				child.Delete();
		}
	}

	public List<T> FindPoints<T>()
	{
		List<T> points = new();
		foreach (var child in Children)
		{
			if (child is T template)
				points.Add(template);
		}
		return points;
	}
}

<style>
	WorldPoints {
		z-index: -200;
	}
</style>
