@using TTT;

@namespace TTT.UI

@if (_data is null)
{
    return;
}

<root>
    <div class="container rounded @(!_data.Thumb.IsNullOrEmpty() ? "thumb" : "")" @onclick=@VoteMap>
        <div class="info">
            @if (!_data.Org.Thumb.IsNullOrEmpty())
            {
                <div class="orgavatar text-shadow rounded" style="background-image: url(@_data.Org.Thumb)"/>
            }
            <div style="flex-direction: column;">
                <text class="title text-shadow">@_data.Title</text>
                <text class="orgname text-shadow">@_data.Org.Title</text>
            </div>
        </div>
        <text class="votes rounded text-shadow">
            <text>@Votes</text>
        </text>
    </div>
</root>

<style>
    MapIcon {
        aspect-ratio: 1;
        height: 100%;
        width: 25%;
        padding: 5px;
        cursor: pointer;

        &:hover {
            transform: scale(1.02);
            opacity: 1;
        }

        &:active {
            transform: scale(1.0);
        }

        .thumb {
            background-image: url(@_data.Thumb);
        }

        .container {
            width: 100%;
            height: 100%;
            background-color: #303030;
            background-position: center;
            background-size: contain;
            font-size: 20px;

            .votes {
                position: absolute;
                bottom: 10px;
                right: 10px;
                background-color: rgba(black, 0.9);
                padding: 10px 15px;
                font-weight: bold;
                font-size: 22px;
                height: 50px;
                min-width: 75px;
                align-items: center;
                justify-content: center;
            }

            .info {
                padding: 5px;

                .orgavatar {
                    width: 40px;
                    height: 40px;
                    background-color: black;
                    background-position: center;
                    background-size: cover;
                }

                .title {
                    font-weight: bold;
                }

                .orgname {
                    opacity: 0.6;
                }
            }
        }
    }
</style>