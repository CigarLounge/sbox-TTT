@using System;
@using System.Linq;

@namespace TTT.UI

<root class="text-shadow @Status.ToStringFast()">
    <div class="header opacity-medium rounded-top">
        <text style="font-size: 14px; flex-grow: 1;">@Status.ToStringFast()</text>
        @if (Karma.Enabled)
        {
            <text><text class="stat" text="Karma"/></text>
        }
        <text class="stat" text="Score"/>
        <text class="stat" text="Ping"/>
    </div>
</root>

@code {
    public PlayerStatus Status { get; set; }
    protected override int BuildHash() => HashCode.Combine(Karma.Enabled);
}

<style>
    ScoreboardGroup {
        display: flex;
        flex-direction: column;
        margin-top: 15px;
        flex-shrink: 0;
        flex-grow: 0;

        .header {
            height: 25px;
            display: flex;
            justify-content: space-between;
            font-weight: 600;
            align-items: center;
            padding: 8px;
        }

        .stat {
            width: 125px;
            text-align: center;
        }

        &.alive {
            .header {
                background-color: #17ad44;
            }
        }

        &.missing {
            .header {
                background-color: #50754f;
            }
        }

        &.dead {
            .header {
                background-color: #c65b3a;
            }
        }

        &.spectator {
            .header {
                background-color: #fcdb38;
            }
        }

        &:first-child {
            margin-top: 0;
        }
    }
</style>